<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rlSelectDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/otp_box_background"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMin3MonthDuration"
                style="@style/headingTextSizeStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/min_3_months_text"
                android:textColor="@color/primary_color" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChargesPerMonthDuration"
                style="@style/headingTextSizeStyle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMin3MonthDuration"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/_text" />

            <View
                android:id="@+id/viewSelectDuration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/tvChargesPerMonthDuration"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/heading_text_color" />

            <RelativeLayout
                android:id="@+id/rlSavingSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewSelectDuration"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/defaultTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Saving on monthly rental"
                    android:textColor="@color/heading_text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSavingPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sp_pro_display_bold"
                    android:text="0%"
                    android:textColor="@color/heading_text_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEarlyCloserSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSavingSD"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/defaultTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/early_closer_charge_info_text"
                    android:textColor="@color/heading_text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEarlyCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sp_pro_display_bold"
                    android:text="@string/_1_month_s_rent_text"
                    android:textColor="@color/heading_text_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFreeRelocationInfoSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlEarlyCloserSD"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/defaultTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/free_relocation_info_text"
                    android:textColor="@color/heading_text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFreeRelocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sp_pro_display_bold"
                    android:text="After 6 months"
                    android:textColor="@color/heading_text_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFreeUpradeInfoSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlFreeRelocationInfoSD"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/defaultTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/free_upgrade_info_text"
                    android:textColor="@color/heading_text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvFreeUpgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sp_pro_display_bold"
                    android:text="@string/after_36_months_text"
                    android:textColor="@color/heading_text_color" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDaysFreeTrailSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlFreeUpradeInfoSD"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/defaultTextSizeStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/_7_days_free_trail_text"
                    android:textColor="@color/heading_text_color" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv7DaysFreeTrailSD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sp_pro_display_bold"
                    android:text="@string/after_36_months_text"
                    android:textColor="@color/heading_text_color" />
            </RelativeLayout>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>