<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlItemSearchNearByLocation"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvItemNearbyLocation"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_margin="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivItemNearbyLocation"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/default_image"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvItemNearbyLocation"
                style="@style/defaultTextSizeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvItemNearbyLocation"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_map_pin_gray"
                android:drawablePadding="@dimen/_3sdp"
                android:gravity="start"
                android:text="@string/greater_noida_sector_4_text" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>