<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="stay_hook_icon_style">
        <item name="android:layout_width">@dimen/_140sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>

    <style name="defaultTextSizeStyle">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_regular</item>
        <item name="android:textColor">@color/sub_heading_text_color</item>
    </style>

    <style name="headingTextSizeStyle1">
        <item name="android:textColor">@color/heading_text_color</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
    </style>

    <style name="headingTextSizeStyle2">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
        <item name="android:textColor">@color/heading_text_color</item>
    </style>
    <style name="headingTextSizeStyle3">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
        <item name="android:textColor">@color/heading_text_color</item>
    </style>

    <style name="defaultEditTextStyle">
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sp_pro_display_medium</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>

    <style name="defaultEditTextStyle1">
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sp_pro_display_medium</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/heading_text_color</item>
    </style>


    <style name="defaultBtnStyle">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sp_pro_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>


    <style name="defaultBtnStyle1">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
    </style>


    <style name="otpEditTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="findCardViewStyle">
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:layout_height">@dimen/_80sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_corner_rounded</item>
        <item name="expanded">true</item>
    </style>



    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/select_date_color</item>
        <item name="colorPrimary">@color/light_black</item>
        <item name="android:textColorPrimary">@color/light_black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:weekNumberColor">@color/select_date_color</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/light_black</item>
    </style>


    <style name="CornerCut" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>


<!--    slider range style-->

    <style name="SliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/TooltipStyle</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="TooltipStyle" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/white</item>
        <item name="thumbColor">@color/primary_color</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">

        <!-- color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/primary_color</item>
        <item name="colorOnBackground">@color/primary_color</item>
        <item name="colorSurface">@color/primary_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:thumbTint">@color/white</item>


    </style>

    <style name="UnSelectedTabStyle">
        <item name="android:textColor">@color/text_hint_color</item>
        <item name="indicatorColor">@color/text_hint_color</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
    </style>

    <style name="SelectedTabStyle">
        <item name="android:textColor">@color/primary_color</item>
        <item name="indicatorColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/sp_pro_display_bold</item>
    </style>

<!--    slider ranger style close-->
</resources>